<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mbw.office.demo.mapper.user.UserMapper">
    <resultMap id="user_mapper" type="com.mbw.office.demo.entity.user.UserPO">
        <id property="id" column="id" />
        <id property="username" column="username" />
        <id property="passwordHash" column="password_hash" />
        <id property="createdTime" column="created_time" />
        <id property="updatedTime" column="updated_time" />
        <collection property="roles" ofType="com.mbw.office.demo.entity.role.RolePO">
            <id property="id" column="id" />
            <id property="appId" column="app_id" />
            <id property="code" column="code" />
            <id property="name" column="name" />
            <id property="createdTime" column="created_time" />
            <id property="updatedTime" column="updated_time" />
        </collection>
    </resultMap>

    <sql id="base_user">
        select id,username,password_hash from oc_sso_users
    </sql>

    <sql id="query_user_params">
        <if test="userId != null">
            and u.id = #{userId}
        </if>
    </sql>

    <select id="getUserWithRolesById" resultMap="user_mapper">
        select u.*,r.*
        from oc_sso_users u
        left join oc_sso_user_app_roles uar on uar.user_id = u.id
        left join oc_sso_roles r on uar.role_id = r.id
        where u.status = #{status} and r.status = #{status}
        <include refid="query_user_params" />
        ;
    </select>

    <select id="listUsers" resultMap="user_mapper">
        select u.*,r.*
        from oc_sso_users u
        left join oc_sso_user_app_roles uar on uar.user_id = u.id
        left join oc_sso_roles r on uar.role_id = r.id
        where u.status = #{status} and r.status = #{status}
    </select>
</mapper>